  "GOVUK / components / text input / ": {
		"prefix": "gov-njk-component-text-input",
		"body": [
			"{% from \"input/macro.njk\" import govukInput %}",
      "",
      "{{ govukInput({",
      "  label: {",
      "    text: \"Email address\"",
      "  },",
      "  hint: {",
      "    text: \"We’ll only use this to send you a receipt\"",
      "  },",
      "  id: \"email\",",
      "  name: \"email\"",
      "}) }}"
		],
		"description": "GOVUK: Nunjucks text input component"
  },
